    <%= f.label :layers %><br>
    <%= f.text_field :layers %>
  </div>
  <div class="field">
    <%= f.label :materials_id %><br>
	<%= f.collection_select :materials_id, Material.all, :id, :materialName %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :height %><br>
    <%= f.text_field :height %>
  </div>
  <div class="field">
    <%= f.label :width %><br>
    <%= f.text_field :width %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
